<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flow_verticalAlign="top">

    <TextView
        android:id="@+id/nameAsset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:maxLines="3"
        android:textColor="#272727"
        android:text="КВАНТОВЫЙ КОМПЬЮТЕР"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoTrouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameAsset"
        android:layout_marginLeft="16dp"
        android:text="Описание проблемы"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/infoProblem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonsLinearLayout"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@+id/infoTrouble"
        android:layout_marginBottom="32dp"
        android:background="#4A90ADD3"
        android:gravity="top|left"
        android:hint="Опишите проблему в данном окне"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/buttonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:background="#1144AA"
        android:orientation="vertical">

        <Button
            android:id="@+id/askProblemBtn"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FAFCFF"
            android:fontFamily="sans-serif-medium"
            android:text="Отправить"
            android:textAllCaps="false"
            android:textColor="#1144AA"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>